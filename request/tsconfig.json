{
    "compilerOptions": {
        "target": "es5",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "declaration": true,
        "typeRoots": [
            "../node_modules/miniprogram-api-typings"
        ],
        "lib": [
            "es2015",
            "es2015.promise"
        ]
    },
    "include": [
        "*.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}